<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>전문가 댓글 달기</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
<div class="expert-reply-container">
    <div class="expert-reply-header">
        <img src="./images/image.png" alt="Profile Picture">
        <h1>윤수진 코치</h1>
    </div>
    <div class="expert-reply-content">
        <form id="expertReplyForm" onsubmit="submitForm(event)">
            <div class="form-group">
                <label for="introduction">소개글</label>
                <textarea id="introduction" name="introduction" placeholder="텍스트 입력">안녕하세요 전문가 양반입니다</textarea>
            </div>
            <div class="form-group">
                <label for="summary">📖 사연 요약</label>
                <textarea id="summary" name="summary" placeholder="텍스트 입력">사연자의 고민은 집에 많이 가고싶으시군요 흠...</textarea>
            </div>
            <div class="form-group">
                <label for="analysis">🔎 원인 분석</label>
                <textarea id="analysis" name="analysis" placeholder="텍스트 입력">집이 있으니까 집에 가고 싶은것이겠죠</textarea>
            </div>
            <div class="form-group">
                <label for="solution">💡 대처 방향 제시</label>
                <textarea id="solution" name="solution" placeholder="텍스트 입력">집을 없애는건 어떨까요?</textarea>
            </div>

            <!-- URL의 id 값을 저장할 hidden input -->
            <input type="hidden" id="urlId" name="id">

            <div class="form-group-button">
                <button type="submit" >댓글 등록</button>
            </div>
        </form>
    </div>
</div>

<script>
    // 페이지 로드 시 실행되는 부분
    window.onload = function() {
        const urlParams = new URLSearchParams(window.location.search);
        const id = urlParams.get('id');
        document.getElementById('urlId').value = id; // hidden input에 URL의 id 값 설정
    };

    // 폼 제출 시 실행되는 부분
    function submitForm(event) {
        event.preventDefault();

        const introduction = document.getElementById('introduction').value;
        const summary = document.getElementById('summary').value;
        const analysis = document.getElementById('analysis').value;
        const solution = document.getElementById('solution').value;
        const id = document.getElementById('urlId').value;

        const newReply = {
            id: id,
            introduction: introduction,
            summary: summary,
            analysis: analysis,
            solution: solution
        };

        fetch('/reply/complete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(newReply)
        })
                .then(response => {
                    if (response.ok) {
                        alert('댓글이 성공적으로 등록되었습니다!');
                        window.close(); // 댓글 등록 성공 시 창 닫기
                    } else {
                        alert('댓글 등록에 실패했습니다. 다시 시도해주세요.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('댓글 등록 중 오류가 발생했습니다.');
                })
    }

</script>
</body>
</html>
