{{> layout/expert-header}}

<section id="section01">
    <div class="container">
        <div class="page-wrapper">
            <div class="line-up">
                <button class="main-background defalut-btn">정렬</button>
            </div>
            <h3 class="page-title mb-50">
                후기보기
            </h3>
            <div class="page-content">
                <div class="review">
                    <ul class="review-list">
                        {{#reviewList.reviews}}
                            <li class="review-item">
                                <div class="review-header">
                                    <figure>
                                        <img src="/images/{{user.imagePath}}" alt="유저 이미지">
                                    </figure>
                                    <span>{{user.name}}(4점)</span>
                                </div>
                                <div class="review-content">
                                    <span>{{content}}</span>
                                </div>
                                <div class="more-btn"><span class="txt">더보기</span></div>
                            </li>
                        {{/reviewList.reviews}}
                    </ul>
                </div>

                <!-- 페이지 네이션 -->
                <div class="comm-pagination" >
                    <nav aria-label="...">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">2</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function() {
        $('.more-btn').on('click', function() {
            const txt = $(this).find('.txt');
            var reviewItem = $(this).closest('.review-item');
            reviewItem.toggleClass('expanded');
            if (reviewItem.hasClass('expanded')) {
                txt.addClass('on');
                txt.text('접기');
            } else {
                txt.removeClass('on');
                txt.text('더보기');
            }

        });
    });

</script>
{{> layout/footer}}
