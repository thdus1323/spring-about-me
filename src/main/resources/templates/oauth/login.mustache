<div class="login-modal">
    <div class="login-modal-body">
        <h1 class="login-title">로그인</h1>
        <div class="login-slide-wrapper">

            <div class="login-slide-content">
                <div class="left login-form">
                    <button class="back left-for-mid main-background"><i class="fa-solid fa-right-long"></i></button>
                    <div class="login-type-head">
                        클라이언트
                    </div>
                    <form action="/login" method="post" id="loginForm">
                        <input type="hidden" id="userRole" name="userRole" value="CLIENT">
                        <div class="login-group mb-3">
                            <label for="inputUsername" class="form-label">아이디 <span class="text-danger">*</span></label>
                            <input type="email" id="inputUsername" name="email" class="form-control"
                                   placeholder="아이디(이메일)을 입력해 주세요" required value="mimi@nate.com">
                        </div>
                        <div class="login-group mb-3">
                            <label for="inputPassword" class="form-label">비밀번호 <span
                                    class="text-danger">*</span></label>
                            <input type="password" id="inputPassword" name="password" class="form-control"
                                   placeholder="비밀번호를 입력해 주세요" required value="1234">
                        </div>
                        <button type="submit" class="login-btn main-background">로그인</button>
                        <div class="login-links mt-3 d-flex justify-content-between">
                            <a href="#" class="text-success">아이디 찾기</a>
                            <a href="#" class="text-success">비밀번호 찾기</a>
                            <a href="/join" class="text-success">회원가입</a>
                        </div>
                    </form>
                </div>
                <div class="mid">
                    <button class="login-type client-login main-background">클라이언트 로그인</button>
                    <button class="login-type counselor-login main-background">상담사 로그인</button>
                    <div class="easy-login-wrapper">
                        <a href="#" id="NaverSignup" class="naver"><img src="./images/naver_oauth.png"
                                                                        alt="Naver Signup">네이버 로그인</a>
                        <a href="#" id="kakaoSignup" class="kakao"><img src="./images/kakao_oauth.png"
                                                                        alt="Kakao Signup">카카오 로그인</a>
                    </div>
                </div>
                <div class="right login-form">
                    <button class="back right-for-mid main-background"><i class="fa-solid fa-right-long"></i></button>
                    <div class="login-type-head">
                        상담사
                    </div>
                    <form action="/login" method="post" id="loginForm">
                        <input type="hidden" id="userRole" name="userRole" value="CLIENT">
                        <div class="login-group mb-3">
                            <label for="inputUsername" class="form-label">아이디 <span class="text-danger">*</span></label>
                            <input type="email" id="inputUsername" name="email" class="form-control"
                                   placeholder="아이디(이메일)을 입력해 주세요" required value="expert1@nate.com">
                        </div>
                        <div class="login-group mb-3">
                            <label for="inputPassword" class="form-label">비밀번호 <span
                                    class="text-danger">*</span></label>
                            <input type="password" id="inputPassword" name="password" class="form-control"
                                   placeholder="비밀번호를 입력해 주세요" required value="1234">
                        </div>
                        <button type="submit" class="login-btn main-background">로그인</button>
                        <div class="login-links mt-3 d-flex justify-content-between">
                            <a href="#" class="text-success">아이디 찾기</a>
                            <a href="#" class="text-success">비밀번호 찾기</a>
                            <a href="/join" class="text-success">회원가입</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.client-login').click(function () {
            $('.login-slide-content').animate({left: '0'}, 500);
        });
        $('.counselor-login').click(function () {
            $('.login-slide-content').animate({left: '-800px'}, 500);
        });
        $('.right-for-mid').click(function () {
            $('.login-slide-content').animate({left: '-400px'}, 500);
        });
        $('.left-for-mid').click(function () {
            $('.login-slide-content').animate({left: '-400px'}, 500);
        });
    });
</script>
